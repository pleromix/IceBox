<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>io.github.pleromix.IceBox</id>

    <name>IceBox</name>
    <summary>PDF Maker</summary>
    <developer_name>Mohammadreza Faraji</developer_name>

    <releases>
        <release version="1.1.2" date="2025-05-07">
            <description>
                <ul>
                    <li>Added support for generating grayscale PDF files.</li>
                    <li>All imported images are now automatically converted to JPEG format before being embedded in the
                        PDF.
                    </li>
                    <li>Fixed bugs related to rendering images with alpha channels in the final PDF output.</li>
                    <li>Fixed issues related to page margin calculations.</li>
                    <li>Added an Image Controls panel for managing compression and transformations.</li>
                    <li>Added support for JPEG 2000 (*.jp2) image files.</li>
                    <li>Implemented a Metadata panel for editing PDF file metadata.</li>
                    <li>Introduced a new Settings panel.</li>
                    <li>Added a View Size slider for controlling thumbnail sizes.</li>
                    <li>Fine-tuned the application user interface for better usability.</li>
                    <li>Addressed various minor bugs and stability issues.</li>
                </ul>

            </description>
        </release>
    </releases>

    <metadata_license>CC-BY-SA-4.0</metadata_license>
    <project_license>GPL-3.0</project_license>

    <description>
        <ul>
            <li>Convert images to PDF</li>
            <li>Compress and transform images</li>
            <li>Generate grayscale PDFs</li>
            <li>Support multiple image formats</li>
            <li>Add metadata to PDFs</li>
        </ul>
    </description>

    <categories>
        <category>Development</category>
        <category>Science</category>
    </categories>

    <keywords>
        <keyword>pdf</keyword>
        <keyword>document</keyword>
        <keyword>photo</keyword>
        <keyword>convert</keyword>
        <keyword>image</keyword>
        <keyword>compress</keyword>
        <keyword>scan</keyword>
    </keywords>

    <branding>
        <color type="primary" scheme_preference="light">#e9ddafff</color>
        <color type="primary" scheme_preference="dark">#c8c4b7ff</color>
    </branding>

    <url type="homepage">https://github.com/pleromix/IceBox</url>

    <content_rating type="oars-1.1"/>

    <requires>
        <control>keyboard</control>
        <control>pointing</control>
    </requires>

    <launchable type="desktop-id">io.github.pleromix.IceBox.desktop</launchable>

