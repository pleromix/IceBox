<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>io.github.pleromix.IceBox</id>

    <name>IceBox</name>
    <summary>PDF Maker</summary>
    <developer_name>Mohammadreza Faraji</developer_name>

    <releases>
        <release version="1.0.1" date="2025-04-24">
            <description>
                <ul>
                    <li>Fixed drag-and-drop and PNG thumbnail issues</li>
                    <li>Disabled actions during PDF creation to prevent interference</li>
                    <li>Added link button next to completed jobs to be able to open the PDF</li>
                    <li>Thumbnails are now stored in memory instead of temp files</li>
                    <li>Closing active notifications when starting a new PDF</li>
                    <li>Added support for *.webp files</li>
                    <li>Fixed final PDF file extension issue</li>
                </ul>
            </description>
        </release>
    </releases>

    <metadata_license>CC-BY-SA-4.0</metadata_license>
    <project_license>GPL-3.0</project_license>

    <description>
        <p>
            IceBox helps you convert images into a PDF file
        </p>
    </description>

    <categories>
        <category>Development</category>
        <category>Science</category>
    </categories>

    <keywords>
        <keyword>PDF</keyword>
        <keyword>document</keyword>
        <keyword>photo</keyword>
    </keywords>

    <branding>
        <color type="primary" scheme_preference="light">#e9ddafff</color>
        <color type="primary" scheme_preference="dark">#c8c4b7ff</color>
    </branding>

    <url type="homepage">https://github.com/pleromix/IceBox</url>

    <content_rating type="oars-1.1"/>

    <requires>
        <control>keyboard</control>
        <control>pointing</control>
    </requires>

    <launchable type="desktop-id">io.github.pleromix.IceBox.desktop</launchable>

